<!DOCTYPE html>
<html>
  <head>
    <title>PatientsManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body>
    <div>
      <%= link_to 'Patient Management', root_path %>
    </div>
    <div class="flex items-center">
      <% if !user_signed_in? %>
        <div>
          <%= button_to "Log In", new_user_session_url, method: "get" %>
          <%= button_to "Sign Up", new_user_registration_url, method: "get" %>
        </div>
      <% else %>
        <div>
          <div>
            <%= "Currently signed in as: #{current_user.full_name} (#{current_user.role})" %>
          </div>
          <div>
            <%= button_to "Log Out", destroy_user_session_url, method: "delete" %>
          </div>
          <div>
            <% if current_user.role == 'receptionist' %>
            <%= link_to "Register a new patient", new_patient_path %>
            <%else %>
              <%=link_to "See Patients vs Days Graph", patients_vs_days_graph_doctors_path %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if alert || notice %>
    <div >
      <% if notice %>
        <p role="alert"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p role="alert"><%= alert %></p>
      <% end %>
    </div>
  <% end %>

    <%= yield %>
  </body>
</html>
