<!DOCTYPE html>
<html>
  <head>
    <title>PatientsManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div>
      <%= link_to 'Patient Management', root_path %>
    </div>
    <div class="flex items-center">
      <% if !user_signed_in? %>
        <div>
          <%= button_to "Log In", new_user_session_url, method: "get" %>
          <%= button_to "Sign Up", new_user_registration_url, method: "get" %>
        </div>
      <% else %>
        <div>
          <p class="text-gray-600">
            <%= "Currently signed in as: #{current_user.role}" %>
          </p>
          <%= button_to "Log Out", destroy_user_session_url, method: "delete" %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
