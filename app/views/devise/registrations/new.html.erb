<div class="flex justify-center items-center h-screen">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <div class="flex items-center mb-2">
          <%= f.radio_button :role, 'doctor', id: 'doctor', class: "mr-2" %>
          <%= f.label :role, 'Doctor', class: "text-sm" %>
        </div>
        <div class="flex items-center">
          <%= f.radio_button :role, 'receptionist', checked: true, id: 'receptionist', class: "mr-2" %>
          <%= f.label :role, 'Receptionist', class: "text-sm" %>
        </div>
      </div>

      <div class="mb-4">
        <%= f.label :first_name, class: "block font-medium mb-2" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block font-medium mb-2" %>
        <%= f.text_field :last_name, autocomplete: "last name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4" id="speciality_field" style="display: none;">
        <%= f.label :speciality, class: "block font-medium mb-2" %>
        <%= f.select :speciality, ['Cardiovascular', 'MBBS', 'Neurology', 'Orthopedics', 'Pediatrics', 'Psychiatry', 'Dermatology', 'Gastroenterology', 'Infectious Diseases', 'Internal Medicine', 'Oncology', 'Ophthalmology', 'Otolaryngology (ENT)', 'Radiology', 'Surgery', 'Urology'].sort, prompt: 'Select your speciality', class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block font-medium mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block font-medium mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="text-center">
        <%= f.submit "Sign up", class: "bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg w-full" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
    document.getElementById('doctor').addEventListener('change', function() {
        document.getElementById('speciality_field').style.display = this.checked ? 'block' : 'none';
    });

    document.getElementById('receptionist').addEventListener('change', function() {
        document.getElementById('speciality_field').style.display = this.checked ? 'none' : 'block';
    });
</script>