<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <div class="field">
      <%= f.label "Sign Up As:" %><br />
      <%= f.radio_button :role, 'doctor', id: 'doctor' %> Doctor<br />
      <%= f.radio_button :role, 'receptionist', checked: true, id: 'receptionist' %> Receptionist
    </div>

    <div class="mb-4">
      <%= f.label :first_name, class: "block font-medium mb-2" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, class: "block font-medium mb-2" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div class="field" id="speciality_field" style="display: none;">
      <%= f.label :speciality %><br />
      <%= f.text_field :speciality %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<script>
    document.getElementById('doctor').addEventListener('change', function() {
        document.getElementById('speciality_field').style.display = this.checked ? 'block' : 'none';
    });

    document.getElementById('receptionist').addEventListener('change', function() {
        document.getElementById('speciality_field').style.display = this.checked ? 'none' : 'block';
    });
</script>
